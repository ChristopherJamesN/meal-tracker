  <% end %>

  <div class="form-group">
    <%= form.text_field :name, id: :meal_name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= form.number_field :calories, id: :meal_calories, class: "form-control", placeholder: "Calories" %>
  </div>

  <div class="form-group">
    <%= form.number_field :protein, id: :meal_protein, class: "form-control", placeholder: "Protein" %>
  </div>

  <div class="form-group">
    <%= form.number_field :carbs, id: :meal_carbs, class: "form-control", placeholder: "Carbs" %>
  </div>

  <div class="form-group">
    <%= form.number_field :fat, id: :meal_fat, class: "form-control", placeholder: "Fat" %>
  </div>

  <div class="form-group">
    <%= form.text_field :description, id: :meal_description, class: "form-control", placeholder: "Description" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  <br>
<% end %>
