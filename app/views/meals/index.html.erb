<h1>Meals</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th>Protein</th>
      <th>Carbs</th>
      <th>Fat</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.protein %></td>
        <td><%= meal.carbs %></td>
        <td><%= meal.fat %></td>
        <td><%= meal.description %></td>
        <td><%= link_to 'View', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Delete', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <tr>
        <td>Totals</td>
        <td><%= @meals.total_calories %></td>
        <td><%= @meals.total_protein %></td>
        <td><%= @meals.total_carbs %></td>
        <td><%= @meals.total_fat %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
  </tbody>
</table>

<br>
